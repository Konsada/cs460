VFD=../mtximage

mount -o loop $VFD /mnt
rm /mnt/bin/*
umount /mnt

echo --------------------- make u1 -----------------------
bcc -c -ansi u1.c
as86 -o u.o u.s
ld86 -o u1 u.o u1.o ../mtxlib /usr/lib/bcc/libc.a

echo --------------------- make u2 -----------------------
bcc  -c -ansi u2.c
as86 -o u.o u.s
ld86 -o u2 u.o u2.o ../mtxlib /usr/lib/bcc/libc.a

mount -o loop $VFD /mnt
cp $1 /mnt/bin/u1
cp $2 /mnt/bin/u2
umount /mnt

rm *.o u1
rm *.o u2
echo done u1 u2
